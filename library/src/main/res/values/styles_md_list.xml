<resources>

  <style name="MdList">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="MdList.Spacing" parent="">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">?attr/mdList_spacing</item>
  </style>

  <style name="MdList.Subheader" parent="MdText.Body1.SingleLine">
    <item name="android:layout_height">?attr/mdList_itemHeight_md</item>
    <item name="android:paddingLeft">?attr/mdLayout_spacing_md</item>
    <item name="android:paddingRight">?attr/mdLayout_spacing_md</item>
    <item name="android:textColor">?attr/mdSecondaryTextColor_backgroundPalette</item>
    <item name="android:gravity">left|center_vertical</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="MdList.Wrapper" parent="">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">vertical</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:paddingTop">?attr/mdLayout_spacing_sm</item>
    <item name="android:paddingBottom">?attr/mdLayout_spacing_sm</item>
  </style>

  <!-- SingleLine.TextOnly -->

  <style name="MdList.SingleLine.TextOnly" parent="">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:minHeight">?attr/mdList_itemHeight_md</item>
  </style>

  <style name="MdList.SingleLine.TextOnly.Text" parent="MdText.Subhead.SingleLine">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:paddingTop">?attr/mdLayout_spacing_sm</item>
    <item name="android:paddingLeft">?attr/mdLayout_spacing_md</item>
    <item name="android:paddingRight">?attr/mdLayout_spacing_md</item>
    <item name="android:paddingBottom">?attr/mdLayout_spacing_sm</item>
  </style>

  <!-- SingleLine.IconWithText -->

  <style name="MdList.SingleLine.IconWithText" parent="MdList.SingleLine.TextOnly"></style>

  <style name="MdList.SingleLine.IconWithText.Icon" parent="">
    <item name="android:scaleType">fitCenter</item>
    <item name="android:layout_width">24dp</item>
    <item name="android:layout_height">24dp</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:layout_marginLeft">?attr/mdLayout_spacing_md</item>
  </style>

  <style name="MdList.SingleLine.IconWithText.Text" parent="MdList.SingleLine.TextOnly.Text">
    <item name="android:paddingLeft">?attr/mdLayout_contentAssociatedWithIconOrAvatarLeftMargin</item>
  </style>

  <!-- SingleLine.AvatarWithText -->

  <style name="MdList.SingleLine.AvatarWithText" parent="MdList.SingleLine.IconWithText">
    <item name="android:minHeight">?attr/mdList_itemHeight_lg</item>
  </style>

  <style name="MdList.SingleLine.AvatarWithText.Avatar" parent="MdList.SingleLine.IconWithText.Icon">
    <item name="android:layout_width">40dp</item>
    <item name="android:layout_height">40dp</item>
  </style>

  <style name="MdList.SingleLine.AvatarWithText.Text" parent="MdList.SingleLine.IconWithText.Text"></style>

  <!-- SingleLine.AvatarIconWithText -->

  <style name="MdList.SingleLine.AvatarIconWithText" parent="MdList.SingleLine.AvatarWithText"></style>

  <style name="MdList.SingleLine.AvatarIconWithText.Avatar" parent="MdList.SingleLine.AvatarWithText.Avatar"></style>

  <style name="MdList.SingleLine.AvatarIconWithText.Text" parent="MdList.SingleLine.AvatarWithText.Text">
    <item name="android:paddingRight">0dp</item>
    <item name="android:layout_marginRight">?attr/mdList_secondaryActionSize</item>
  </style>

  <style name="MdList.SingleLine.AvatarIconWithText.Icon" parent="">
    <item name="android:scaleType">fitCenter</item>
    <item name="android:layout_alignParentRight">true</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:layout_width">?attr/mdList_secondaryActionSize</item>
    <item name="android:layout_height">?attr/mdList_secondaryActionSize</item>
    <item name="android:paddingTop">?attr/mdLayout_spacing_md</item>
    <item name="android:paddingLeft">?attr/mdLayout_spacing_md</item>
    <item name="android:paddingRight">?attr/mdLayout_spacing_md</item>
    <item name="android:paddingBottom">?attr/mdLayout_spacing_md</item>
  </style>

  <!-- TwoLine.TextOnly -->

  <style name="MdList.TwoLine.TextOnly" parent="">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:minHeight">?attr/mdList_itemHeight_xlg</item>
  </style>

  <style name="MdList.TwoLine.TextOnly.Text.First" parent="MdText.Subhead.SingleLine">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingLeft">?attr/mdLayout_spacing_md</item>
    <item name="android:paddingRight">?attr/mdLayout_spacing_md</item>
  </style>

  <style name="MdList.TwoLine.TextOnly.Text.Second" parent="MdText.Body1.SingleLine">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingTop">2dp</item>
    <item name="android:paddingLeft">?attr/mdLayout_spacing_md</item>
    <item name="android:paddingRight">?attr/mdLayout_spacing_md</item>
    <item name="android:textColor">?attr/mdSecondaryTextColor_backgroundPalette</item>
  </style>

  <!-- TwoLine.IconWithText -->

  <style name="MdList.TwoLine.IconWithText" parent="MdList.TwoLine.TextOnly"></style>

  <style name="MdList.TwoLine.IconWithText.Icon" parent="MdList.SingleLine.IconWithText.Icon"></style>

  <style name="MdList.TwoLine.IconWithText.Text.First" parent="MdList.TwoLine.TextOnly.Text.First">
    <item name="android:paddingLeft">?attr/mdLayout_contentAssociatedWithIconOrAvatarLeftMargin</item>
  </style>

  <style name="MdList.TwoLine.IconWithText.Text.Second" parent="MdList.TwoLine.TextOnly.Text.Second">
    <item name="android:paddingLeft">?attr/mdLayout_contentAssociatedWithIconOrAvatarLeftMargin</item>
  </style>

  <!-- TwoLine.AvatarWithText -->

  <style name="MdList.TwoLine.AvatarWithText" parent="MdList.TwoLine.IconWithText"></style>

  <style name="MdList.TwoLine.AvatarWithText.Avatar" parent="MdList.SingleLine.AvatarWithText.Avatar"></style>

  <style name="MdList.TwoLine.AvatarWithText.Text.First" parent="MdList.TwoLine.IconWithText.Text.First"></style>

  <style name="MdList.TwoLine.AvatarWithText.Text.Second" parent="MdList.TwoLine.IconWithText.Text.Second"></style>

  <!-- TwoLine.AvatarIconWithText -->

  <style name="MdList.TwoLine.AvatarIconWithText" parent="MdList.TwoLine.AvatarWithText"></style>

  <style name="MdList.TwoLine.AvatarIconWithText.Avatar" parent="MdList.TwoLine.AvatarWithText.Avatar"></style>

  <style name="MdList.TwoLine.AvatarIconWithText.Text.First" parent="MdList.TwoLine.AvatarWithText.Text.First">
    <item name="android:paddingRight">0dp</item>
    <item name="android:layout_marginRight">?attr/mdList_secondaryActionSize</item>
  </style>

  <style name="MdList.TwoLine.AvatarIconWithText.Text.Second" parent="MdList.TwoLine.AvatarWithText.Text.Second">
    <item name="android:paddingRight">0dp</item>
    <item name="android:layout_marginRight">?attr/mdList_secondaryActionSize</item>
  </style>

  <style name="MdList.TwoLine.AvatarIconWithText.Icon" parent="MdList.SingleLine.AvatarIconWithText.Icon"></style>

  <!-- ThreeLine.TextOnly -->

  <style name="MdList.ThreeLine.TextOnly" parent="">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:minHeight">?attr/mdList_itemHeight_xxlg</item>
  </style>

  <style name="MdList.ThreeLine.TextOnly.Text.First" parent="MdList.TwoLine.TextOnly.Text.First"></style>

  <style name="MdList.ThreeLine.TextOnly.Text.Second" parent="MdList.TwoLine.TextOnly.Text.Second"></style>

  <style name="MdList.ThreeLine.TextOnly.Text.Second.MultipleLine" parent="MdList.ThreeLine.TextOnly.Text.Second">
    <item name="android:singleLine">false</item>
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">2</item>
  </style>

  <style name="MdList.ThreeLine.TextOnly.Text.Third" parent="MdList.TwoLine.TextOnly.Text.Second"></style>

  <!-- ThreeLine.IconWithText -->

  <style name="MdList.ThreeLine.IconWithText" parent="MdList.ThreeLine.TextOnly"></style>

  <style name="MdList.ThreeLine.IconWithText.Icon" parent="MdList.SingleLine.IconWithText.Icon">
    <item name="android:layout_centerVertical">false</item>
    <item name="android:layout_alignParentTop">true</item>
    <item name="android:layout_marginTop">?attr/mdLayout_spacing_md</item>
  </style>

  <style name="MdList.ThreeLine.IconWithText.Text.First" parent="MdList.ThreeLine.TextOnly.Text.First">
    <item name="android:paddingLeft">?attr/mdLayout_contentAssociatedWithIconOrAvatarLeftMargin</item>
  </style>

  <style name="MdList.ThreeLine.IconWithText.Text.Second" parent="MdList.ThreeLine.TextOnly.Text.Second">
    <item name="android:paddingLeft">?attr/mdLayout_contentAssociatedWithIconOrAvatarLeftMargin</item>
  </style>

  <style name="MdList.ThreeLine.IconWithText.Text.Second.MultipleLine" parent="MdList.ThreeLine.TextOnly.Text.Second.MultipleLine">
    <item name="android:paddingLeft">?attr/mdLayout_contentAssociatedWithIconOrAvatarLeftMargin</item>
  </style>

  <style name="MdList.ThreeLine.IconWithText.Text.Third" parent="MdList.ThreeLine.TextOnly.Text.Third">
    <item name="android:paddingLeft">?attr/mdLayout_contentAssociatedWithIconOrAvatarLeftMargin</item>
  </style>

  <!-- ThreeLine.AvatarWithText -->

  <style name="MdList.ThreeLine.AvatarWithText" parent="MdList.ThreeLine.IconWithText"></style>

  <style name="MdList.ThreeLine.AvatarWithText.Avatar" parent="MdList.SingleLine.AvatarWithText.Avatar">
    <item name="android:layout_centerVertical">false</item>
    <item name="android:layout_alignParentTop">true</item>
    <item name="android:layout_marginTop">?attr/mdLayout_spacing_md</item>
  </style>

  <style name="MdList.ThreeLine.AvatarWithText.Text.First" parent="MdList.ThreeLine.TextOnly.Text.First">
    <item name="android:paddingLeft">?attr/mdLayout_contentAssociatedWithIconOrAvatarLeftMargin</item>
  </style>

  <style name="MdList.ThreeLine.AvatarWithText.Text.Second" parent="MdList.ThreeLine.TextOnly.Text.Second">
    <item name="android:paddingLeft">?attr/mdLayout_contentAssociatedWithIconOrAvatarLeftMargin</item>
  </style>

  <style name="MdList.ThreeLine.AvatarWithText.Text.Second.MultipleLine" parent="MdList.ThreeLine.TextOnly.Text.Second.MultipleLine">
    <item name="android:paddingLeft">?attr/mdLayout_contentAssociatedWithIconOrAvatarLeftMargin</item>
  </style>

  <style name="MdList.ThreeLine.AvatarWithText.Text.Third" parent="MdList.ThreeLine.TextOnly.Text.Third">
    <item name="android:paddingLeft">?attr/mdLayout_contentAssociatedWithIconOrAvatarLeftMargin</item>
  </style>

  <!-- ThreeLine.AvatarIconWithText -->

  <style name="MdList.ThreeLine.AvatarIconWithText" parent="MdList.ThreeLine.AvatarWithText"></style>

  <style name="MdList.ThreeLine.AvatarIconWithText.Avatar" parent="MdList.ThreeLine.AvatarWithText.Avatar"></style>

  <style name="MdList.ThreeLine.AvatarIconWithText.Icon" parent="MdList.SingleLine.AvatarIconWithText.Icon">
    <item name="android:layout_centerVertical">false</item>
    <item name="android:layout_alignParentTop">true</item>
  </style>

  <style name="MdList.ThreeLine.AvatarIconWithText.Text.First" parent="MdList.ThreeLine.AvatarWithText.Text.First">
    <item name="android:paddingRight">0dp</item>
    <item name="android:layout_marginRight">?attr/mdList_secondaryActionSize</item>
  </style>

  <style name="MdList.ThreeLine.AvatarIconWithText.Text.Second" parent="MdList.ThreeLine.AvatarWithText.Text.Second">
    <item name="android:paddingRight">0dp</item>
    <item name="android:layout_marginRight">?attr/mdList_secondaryActionSize</item>
  </style>

  <style name="MdList.ThreeLine.AvatarIconWithText.Text.Second.MultipleLine"
    parent="MdList.ThreeLine.AvatarWithText.Text.Second.MultipleLine">
    <item name="android:paddingRight">0dp</item>
    <item name="android:layout_marginRight">?attr/mdList_secondaryActionSize</item>
  </style>

  <style name="MdList.ThreeLine.AvatarIconWithText.Text.Third" parent="MdList.ThreeLine.AvatarWithText.Text.Third">
    <item name="android:paddingRight">0dp</item>
    <item name="android:layout_marginRight">?attr/mdList_secondaryActionSize</item>
  </style>

</resources>